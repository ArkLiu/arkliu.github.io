root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 4

[*.cfg]
indent_style = space
indent_size = 4

[*.py]
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 88

[*.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
